<div class="container" style="margin-top: 3rem">

<p id="notice"><%= notice %></p>

<h1 class="text-center">Materia <span style="font-size: 16px;" class="float-right"> <%= link_to 'Nueva Materia', new_materium_path, class: "badge badge-primary" %> </span> </h1>

<table class="table table-sm table-hovered">
  <thead class="text-center">
    <tr>
      <th>Nombre</th>
      <th>Colegio</th>
      <th>Horario</th>
      <th>Profesor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materia.each do |materium| %>
      <tr class="text-center">
        <td><%= materium.nombre %></td>
        <td><%= materium.colegio.nombre %></td>
        <td><%= materium.horario %></td>
        <td><%= materium.profesor.nombres %> <%= materium.profesor.apellidos %>  </td>
        <td><%= link_to 'Ver', materium %></td>
        <td><%= link_to 'Editar', edit_materium_path(materium) %></td>
        <td><%= link_to 'Eliminar', materium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
