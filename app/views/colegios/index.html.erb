<p id="notice"><%= notice %></p>

<h1>Colegios</h1>

<table class="table table-sm table-responsive">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Pais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colegios.each do |colegio| %>
      <tr>
        <td><%= colegio.nombre %></td>
        <td><%= colegio.direccion %></td>
        <td><%= colegio.pais %></td>
        <td><%= link_to 'Ver', colegio %></td>
        <td><%= link_to 'Editar', edit_colegio_path(colegio) %></td>
        <td><%= link_to 'Eliminar', colegio, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Colegio', new_colegio_path, class: "badge badge-primary" %>
